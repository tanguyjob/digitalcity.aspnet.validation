@model IEnumerable<Clothes>
@using DigitalCity.ASPNET.Validation.Helper

@{
    ViewBag.Title = "Liste de vetement";
}

<h1>Liste de vetment</h1>

@Html.ActionLink("Ajouter un vetement","Add", "Clothes",null,new { @class="btn btn-dark"})

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Color)</th>
            <th>@Html.DisplayNameFor(m => m.Size)</th>
            <th>@Html.DisplayNameFor(m => m.WashTemp)</th>
            <th>@Html.DisplayNameFor(m => m.DryerAllow)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Clothes clothes in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => clothes.Name)</td>
            <td>@Html.DisplayFor(m => clothes.Color)</td>
            <td>@Html.DisplayFor(m => clothes.Size)</td>
            <td>@Html.DisplayFor(m => clothes.WashTemp)</td>
            <td>@Html.DisplayYesNo(clothes.DryerAllow)</td>
            <td>@Html.DisplayFor(m => clothes.Price)</td>

        @*    <td>@clothes.Name</td>
            <td>@clothes.Color</td>
